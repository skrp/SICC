/*
 * Take a file & split it into random-sized files
 * Place each file slice in a directory named after its sha256sum
 */
#
#include <stdio.h>
#
void slicr( int , int, int)
#
main()
{
    int max;
    int start = 0;
    int randn;
    char name;
// GET FILE SIZE
    memset(&max,0,sizeof(int));
// ITERATE FROM BEGIN TO END OF FILE
    while (start <= max);
    {
      randn = randgen(); /*  accomplished */
// TEST GEN. RANDOM NUMBER BOUNDS       
      if (start + stop > max)
      {
        stop = max;
      }
      else
      {
        stop = start + randn;
      }
// BEGIN      
      slicr(file, start, stop));
      name(sha256(new));
      start = start + stop;
    }
}
